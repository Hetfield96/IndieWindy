<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AlbumActivity">

    <ImageView
        android:id="@+id/album_photo"
        android:src="@drawable/ic_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Album photo" />

    <TextView
        android:id="@+id/album_name"
        android:text="Album name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/album_photo"
        android:layout_marginStart="10dp"
        android:textAppearance="@style/TextStyle"
        />

    <TextView
        android:id="@+id/album_artist_name"
        android:text="Artist name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_name"
        android:layout_toEndOf="@id/album_photo"
        android:layout_marginStart="10dp"
        />

    <FrameLayout
        android:id="@+id/album_song_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/album_photo"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>