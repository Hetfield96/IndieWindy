    <fragment
        android:id="@+id/navigation_concert"
        android:name="com.siroytman.indiewindymobile.ui.fragments.concert.ConcertFragment"
        android:label="@string/navigation__title_concert"
        tools:layout="@layout/fragment_concert" />

    <fragment
        android:id="@+id/navigation_personal"
        android:name="com.siroytman.indiewindymobile.ui.fragments.personal.PersonalFragment"
        android:label="@string/navigation__title_personal"
